# Deep Research Automation Tool - Environment Configuration
# Copy this file to .env and update with your own values

# Ollama Configuration (Required)
# Update this URL to point to your Ollama instance
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_API_KEY=ollama-local
OLLAMA_MODEL=llama3.2

# Optional: Custom settings
# MAX_RESULTS=10
# DEFAULT_DATE_FROM=2024-01-01
# OUTPUT_DIR=outputs

# Relevance Filtering (uses AI to filter out irrelevant papers/articles)
# Set to "false" to disable filtering and include all search results
ENABLE_RELEVANCE_FILTER=true
# FILTER_BATCH_SIZE=1

# AI Source Selection (intelligently selects best sources for each topic)
# Set to "false" to disable and use all configured sources
ENABLE_SOURCE_SELECTION=true
